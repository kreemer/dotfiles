# Set personal aliases, overriding those provided by Oh My Zsh libs,
# plugins, and themes. Aliases can be placed here, though Oh My Zsh
# users are encouraged to define aliases within a top-level file in
# the $ZSH_CUSTOM folder, with .zsh extension. Examples:
# - $ZSH_CUSTOM/aliases.zsh
# - $ZSH_CUSTOM/macos.zsh
# For a full list of active aliases, run `alias`.
#
# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"

{{ if (not .codespaces) }}

alias ls="eza"
alias cat="bat"
alias ll="eza -la"

devconshell () {
  TOKEN=`gh auth token`
  devcontainer exec --workspace-folder . --remote-env "GH_TOKEN=$TOKEN" zsh
}

browserpipe () {
  OPEN_UTILITY="xdg-open"
  if [[ $(uname -r) =~ (m|M)icrosoft ]]; then
    OPEN_UTILITY="wslview"
  fi

  if [[ -f /tmp/hostbrowserpipe ]]; then
    rm /tmp/hostbrowserpipe
  fi

  mkfifo /tmp/hostbrowserpipe
  while read -r URL < /tmp/hostbrowserpipe; do $OPEN_UTILITY "$URL"; done
}

devconup () {
  browserpipe &

  devcontainer up --workspace-folder . \
    --additional-features '{ \"ghcr.io/kreemer/features/helix:1\": {}, \"ghcr.io/kreemer/features/marksman:1\": {}}' \
    --dotfiles-repository \"https://github.com/kreemer/dotfiles\" \
    --remote-env \"CODESPACES=true\" \
    --remote-env \"BROWSER=/var/run/hostbrowserpipe\" \
    --mount type=bind,source=/tmp/hostbrowserpipe,target=/var/run/hostbrowserpipe
}

{{ end }}

azsubswitch () {
  if ! az account show &>/dev/null; then
    echo "No Azure CLI session found. Please run 'az login' first."
    return 1
  fi

  az account list --query "[].{id:id,name:name}" -o tsv |
    fzf --no-multi --bind 'enter:execute(az account set -s {1})+abort'

  return 0
}
